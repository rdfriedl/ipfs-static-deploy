{
	"name": "ipfs-static-deploy",
	"description": "A simple CLI tool to deploy static sites to an IPFS node",
	"version": "0.0.1",
	"author": "Robert Friedl",
	"homepage": "https://github.com/rdfriedl/ipfs-static-deploy",
	"license": "MIT",
	"main": "src/index.js",
	"bin": {
		"ipfs-static-deploy": "./bin/run"
	},
	"scripts": {
		"precommit": "pretty-quick --staged",
		"commitmsg": "commitlint -e $GIT_PARAMS",
		"commit": "commit",
		"format": "prettier --write ./**/*.{js,json,css,md}",
		"postpack": "rm -f oclif.manifest.json npm-shrinkwrap.json",
		"prepack": "oclif-dev manifest && oclif-dev readme",
		"test": "nyc mocha --forbid-only \"test/**/*.test.js\"",
		"pack": "oclif-dev pack",
		"create-coverage": "nyc report --reporter=text-lcov > coverage.lcov"
	},
	"dependencies": {
		"@oclif/command": "^1.5.12",
		"@oclif/config": "^1.12.10",
		"@oclif/plugin-help": "^2.1.6",
		"chalk": "^2.4.2",
		"glob": "^7.1.3",
		"ipfs-http-client": "^30.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^7.5.2",
		"@commitlint/config-conventional": "^7.5.0",
		"@commitlint/prompt-cli": "^7.5.0",
		"@oclif/dev-cli": "^1.21.3",
		"@oclif/test": "^1.2.4",
		"@semantic-release/changelog": "^3.0.2",
		"@semantic-release/exec": "^3.3.2",
		"@semantic-release/git": "^7.0.8",
		"chai": "^4.2.0",
		"globby": "^9.1.0",
		"husky": "^1.3.1",
		"mocha": "^6.0.2",
		"nyc": "^13.3.0",
		"prettier": "^1.16.4",
		"pretty-quick": "^1.10.0"
	},
	"repository": "rdfriedl/ipfs-static-deploy",
	"bugs": "https://github.com/rdfriedl/ipfs-static-deploy/issues",
	"engines": {
		"node": ">=8.0.0"
	},
	"files": [
		"/bin",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json",
		"/src"
	],
	"keywords": [
		"ipfs"
	],
	"oclif": {
		"commands": "./src/commands",
		"bin": "ipfs-static-deploy",
		"plugins": [
			"@oclif/plugin-help"
		]
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"printWidth": 80
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release": {
		"verifyConditions": [
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github"
		],
		"prepare": [
			"@semantic-release/changelog",
			"@semantic-release/npm",
			{
				"path": "@semantic-release/execâ€‹",
				"cmd": "npm run pack"
			},
			{
				"path": "@semantic-release/git",
				"assets": [
					"package.json",
					"package-lock.json",
					"CHANGELOG.md",
					"README.md"
				],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		"publish": [
			"@semantic-release/npm",
			"@semantic-release/github"
		]
	}
}
